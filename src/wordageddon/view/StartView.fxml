<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordageddon.controller.StartViewController" stylesheets="@../../resources/styles/application.css">
    <children>
        <!-- LOGIN VIEW -->
        <VBox fx:id="loginPane" alignment="CENTER" spacing="20" visible="true" managed="true" styleClass="card-container">
            <VBox alignment="CENTER" spacing="15" maxWidth="350">
                <!-- Logo -->
                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true" styleClass="logo">
                    <image>
                        <Image url="@../../resources/logo.png"/>
                    </image>
                </ImageView>
                
                <Label text="Wordageddon" styleClass="main-title"/>
                <Label text="Accedi al tuo account" styleClass="section-title"/>
                
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Email:" styleClass="field-label"/>
                    <TextField fx:id="loginEmailField" promptText="Inserisci la tua email" styleClass="text-field"/>
                    
                    <Label text="Password:" styleClass="field-label"/>
                    <PasswordField fx:id="loginPasswordField" promptText="Inserisci la password" styleClass="text-field"/>
                </VBox>
                
                <Button text="Accedi" fx:id="loginButton" onAction="#handleLoginAction" styleClass="primary-button"/>
                <Hyperlink text="Non hai un account? Registrati" onAction="#switchToRegister" styleClass="info-label"/>
                <Label fx:id="loginErrorLabel" textFill="#e74c3c" visible="false" styleClass="info-label"/>
            </VBox>
        </VBox>

        <!-- REGISTRATION VIEW -->
        <VBox fx:id="registerPane" alignment="CENTER" spacing="20" visible="false" managed="false" styleClass="card-container">
            <VBox alignment="CENTER" spacing="15" maxWidth="350">
                <!-- Logo -->
                <ImageView fitHeight="80" fitWidth="80" preserveRatio="true" styleClass="logo">
                    <image>
                        <Image url="@../../resources/logo.png"/>
                    </image>
                </ImageView>
                
                <Label text="Wordageddon" styleClass="main-title"/>
                <Label text="Crea un nuovo account" styleClass="section-title"/>
                
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Nome:" styleClass="field-label"/>
                    <TextField fx:id="regFirstNameField" promptText="Inserisci il tuo nome" styleClass="text-field"/>
                    
                    <Label text="Cognome:" styleClass="field-label"/>
                    <TextField fx:id="regLastNameField" promptText="Inserisci il tuo cognome" styleClass="text-field"/>
                    
                    <Label text="Username:" styleClass="field-label"/>
                    <TextField fx:id="regUsernameField" promptText="Scegli un username" styleClass="text-field"/>
                    
                    <Label text="Email:" styleClass="field-label"/>
                    <TextField fx:id="regEmailField" promptText="Inserisci la tua email" styleClass="text-field"/>
                    
                    <Label text="Password:" styleClass="field-label"/>
                    <PasswordField fx:id="regPasswordField" promptText="Scegli una password" styleClass="text-field"/>
                    
                    <Label text="Conferma Password:" styleClass="field-label"/>
                    <PasswordField fx:id="regConfirmPasswordField" promptText="Conferma la password" styleClass="text-field"/>
                </VBox>
                
                <Button text="Registrati" fx:id="registerButton" onAction="#handleRegisterAction" styleClass="success-button"/>
                <Hyperlink text="Hai giÃ  un account? Accedi" onAction="#switchToLogin" styleClass="info-label"/>
                <Label fx:id="registerErrorLabel" textFill="#e74c3c" visible="false" styleClass="info-label"/>
            </VBox>
        </VBox>
    </children>
</StackPane>
