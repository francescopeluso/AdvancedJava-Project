<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="leaderboardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordageddon.controller.LeaderboardController" styleClass="app-container" stylesheets="@../../resources/styles/application.css">
   <children>
      <!-- Header with Logo -->
      <VBox spacing="10.0" styleClass="app-header">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" styleClass="logo">
                     <image>
                        <Image url="@../../resources/logo.png" />
                     </image>
                  </ImageView>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Wordageddon - Cronologia Partite" styleClass="page-title" />
                        <Label fx:id="userWelcomeLabel" text="Benvenuto, Utente" styleClass="welcome-text" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- User Statistics -->
      <VBox spacing="10.0" styleClass="stats-container">
         <children>
            <Label text="Statistiche" styleClass="section-title" />
            <Label fx:id="userStatsLabel" text="Caricamento statistiche..." wrapText="true" styleClass="stats-text" />
         </children>
      </VBox>
      
      <!-- Game Sessions Table -->
      <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="table-container">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Le tue partite" styleClass="section-title" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="refreshButton" onAction="#handleRefresh" text="Aggiorna" styleClass="btn-secondary" />
               </children>
            </HBox>
            
            <TableView fx:id="gameSessionsTable" VBox.vgrow="ALWAYS" styleClass="app-table">
               <columns>
                  <TableColumn fx:id="difficultyColumn" prefWidth="100.0" text="DifficoltÃ " />
                  <TableColumn fx:id="scoreColumn" prefWidth="80.0" text="Punteggio" />
                  <TableColumn fx:id="questionsColumn" prefWidth="80.0" text="Domande" />
                  <TableColumn fx:id="correctColumn" prefWidth="80.0" text="Corrette" />
                  <TableColumn fx:id="percentageColumn" prefWidth="60.0" text="\%" />
                  <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Data" />
                  <TableColumn fx:id="durationColumn" prefWidth="80.0" text="Durata" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
      <!-- Footer with actions -->
      <HBox alignment="CENTER" spacing="20.0" styleClass="footer-actions">
         <children>
            <Button fx:id="backButton" onAction="#handleBack" text="Torna alla Dashboard" styleClass="btn-primary" />
         </children>
      </HBox>
   </children>
</VBox>
