<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="leaderboardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wordageddon.controller.LeaderboardController" styleClass="app-container" stylesheets="@../../resources/styles/application.css">
   <children>
      <!-- Header with Logo -->
      <VBox spacing="10.0" styleClass="app-header">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true" styleClass="logo">
                     <image>
                        <Image url="@../../resources/logo.png" />
                     </image>
                  </ImageView>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Wordageddon - Statistiche e Classifica" styleClass="page-title" />
                        <Label fx:id="userWelcomeLabel" text="Benvenuto, Utente" styleClass="welcome-text" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Tab Pane for Global Leaderboard and User History -->
      <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS" styleClass="app-tab-pane">
         <tabs>
            <!-- Global Leaderboard Tab -->
            <Tab text="Classifica Globale" closable="false">
               <content>
                  <VBox spacing="15.0" styleClass="tab-content">
                     <children>
                        <VBox spacing="10.0" styleClass="stats-container">
                           <children>
                              <Label text="Classifica di tutti i giocatori" styleClass="section-title" />
                              <Label text="Visualizza i migliori giocatori ordinati per punteggio totale" styleClass="info-text" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="table-container">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label text="Classifica Globale" styleClass="section-title" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="refreshGlobalButton" onAction="#handleRefreshGlobal" text="Aggiorna" styleClass="btn-secondary" />
                                 </children>
                              </HBox>
                              
                              <TableView fx:id="globalLeaderboardTable" VBox.vgrow="ALWAYS" styleClass="app-table">
                                 <columns>
                                    <TableColumn fx:id="rankColumn" prefWidth="60.0" text="Pos." />
                                    <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Giocatore" />
                                    <TableColumn fx:id="totalPointsColumn" prefWidth="120.0" text="Punteggio Totale" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- User Game History Tab -->
            <Tab text="Le Tue Partite" closable="false">
               <content>
                  <VBox spacing="15.0" styleClass="tab-content">
                     <children>
                        <VBox spacing="10.0" styleClass="stats-container">
                           <children>
                              <Label text="Statistiche" styleClass="section-title" />
                              <Label fx:id="userStatsLabel" text="Caricamento statistiche..." wrapText="true" styleClass="stats-text" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="table-container">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label text="Le tue partite" styleClass="section-title" />
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="refreshButton" onAction="#handleRefresh" text="Aggiorna" styleClass="btn-secondary" />
                                 </children>
                              </HBox>
                              
                              <TableView fx:id="gameSessionsTable" VBox.vgrow="ALWAYS" styleClass="app-table">
                                 <columns>
                                    <TableColumn fx:id="difficultyColumn" prefWidth="100.0" text="DifficoltÃ " />
                                    <TableColumn fx:id="scoreColumn" prefWidth="80.0" text="Punteggio" />
                                    <TableColumn fx:id="questionsColumn" prefWidth="80.0" text="Domande" />
                                    <TableColumn fx:id="correctColumn" prefWidth="80.0" text="Corrette" />
                                    <TableColumn fx:id="percentageColumn" prefWidth="60.0" text="\%" />
                                    <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Data" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
      
      <!-- Footer with actions -->
      <HBox alignment="CENTER" spacing="20.0" styleClass="footer-actions">
         <children>
            <Button fx:id="backButton" onAction="#handleBack" text="Torna alla Dashboard" styleClass="btn-primary" />
         </children>
      </HBox>
   </children>
</VBox>
